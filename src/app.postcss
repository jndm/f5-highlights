@tailwind base;
@tailwind components;
@tailwind utilities;

html, body { @apply h-full overflow-hidden; }

body {
    background-image: radial-gradient(at 0% 100%, rgba(var(--color-secondary-500) / .33) 0px,transparent 50%), radial-gradient(at 98% 100%,rgba(var(--color-error-500) / .33) 0px,transparent 50%);
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover
}